{
  "name": "youtube-downloader",
  "version": "1.0.0",
  "description": "Aplicação simples para baixar vídeos do YouTube em alta qualidade",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:reload": "pm2 reload ecosystem.config.js",
    "pm2:logs": "pm2 logs youtube-downloader",
    "pm2:monit": "pm2 monit",
    "health": "curl -f http://localhost:3000/health || exit 1",
    "cleanup": "node -e \"const fs = require('fs'); const path = require('path'); const dir = 'downloads'; if (fs.existsSync(dir)) fs.readdirSync(dir).forEach(file => fs.unlinkSync(path.join(dir, file)));\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "youtube",
    "downloader",
    "video",
    "nodejs"
  ],
  "author": "João",
  "license": "MIT",
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "morgan": "^1.10.1",
    "node-cron": "^4.2.1",
    "pm2": "^6.0.8",
    "winston": "^3.17.0",
    "xss": "^1.0.15"
  }
}
